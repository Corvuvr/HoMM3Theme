[
    {
        "name": "resourcebar",
        "output": [
            // "hyprout-1", // Hyprout is my virtual screen
            "eDP-1"
        ],
        "layer": "top",
        "position": "bottom",
        "modules-left": [
            "custom/battery-icon", "custom/battery-value", 
            "custom/audio-icon", "wireplumber",
            "custom/cpu-icon", "cpu",
            "custom/temperature-icon", "temperature",
            "custom/bluetooth-icon", "bluetooth",
            "custom/network-icon", "custom/network-value", 
            "custom/memory-icon", "custom/memory-value"
        ],
        "modules-right": [
            "custom/clock"
        ],
        "clock": {
            "format": "Месяц: {:%m, Неделя: %U, День: %u}",
            "format-alt": "{:%R %D}"
        },
        "custom/battery-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        },
        "custom/battery-value": {
            "exec": "cat /sys/class/power_supply/BAT0/capacity",
            "interval": 10,
            "format": "{}",
            "tooltip": false
        },
        "custom/audio-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        },
        "wireplumber": {
            "format": "{volume}",
            "format-muted": "0",
            "on-click": "kitty wiremix &"
        },
        "custom/cpu-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        },
        "cpu": {
            "format": "{usage}"
        },
        "custom/temperature-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        }, 
        "temperature": {
            "format": "{temperatureC}"
        }, 
        "custom/network-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        }, 
        "custom/network-value": {
            "exec": "ping -c1 8.8.8.8 | grep -Eo '[01] received' | cut -c1",
            "interval": 10,
            "format": "{}",
            "tooltip": false
        },
        "custom/bluetooth-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        },
        "bluetooth": {
            "format": "{num_connections}"
        },
        "custom/memory-icon": {
            "exec": "echo '.'",
            "interval": "once",
            "format": "{}",
            "tooltip": false
        },
        "custom/memory-value": {
            "exec": "awk '/MemTotal/ {t=$2} /MemAvailable/ {a=$2} END {printf \"%.0f\\n\", (t-a)/1024}' /proc/meminfo", // In megabytes
            "interval": 1,
            "on-click": "kitty btop &",
            "format": "{}",
            "tooltip": false
        },
        "custom/clock": {
            "exec": "/home/$USER/.config/waybar/HoMM3Clock.sh",
            "on-click": "HOMM3_CLOCK=$(grep \"HOMM3_CLOCK=\" /home/$USER/.config/waybar/HoMM3Clock.sh); HOMM3_CLOCK=${HOMM3_CLOCK:-1}; HOMM3_CLOCK=$(((HOMM3_CLOCK + 1) % 2)); sed -i \"s/HOMM3_CLOCK=./HOMM3_CLOCK=$HOMM3_CLOCK/\" /home/$USER/.config/waybar/HoMM3Clock.sh",
            "exec-on-event": true,
            "interval": 1
        }
    }
    ,
    {
        "name": "hoverbar",
        "layer": "top",
        "passthrough": true,
        "position": "bottom",
        "modules-center": ["hyprland/window"],
        "hyprland/window": {
            "format": "<span>{}</span>",
            "expand": true
        }
    }
]
